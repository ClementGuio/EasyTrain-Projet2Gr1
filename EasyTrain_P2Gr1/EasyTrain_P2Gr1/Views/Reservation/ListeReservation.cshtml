@model List<EasyTrain_P2Gr1.Models.Reservation>
@{
    Layout = (string) ViewData["Layout"];
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>Liste des Cours programmés</title>

    <link href="~/css/vincent.css" rel="stylesheet">


</head>
<body>
    <div class="container">
        <table border="3">
            <tr>
                <th>Titre du cours</th>
                <th>Date du cours</th>
                <th>Client</th>


            </tr>
            @foreach (EasyTrain_P2Gr1.Models.Reservation reservation in Model)
            {
                <tr>
                    <td>@reservation.CoursProgramme.Cours.Titre</td>
                    <td>@reservation.CoursProgramme.DateDebut</td>
                    <td>@reservation.Client.Prenom&nbsp;@reservation.Client.Nom</td>
                    <td><a href="/reservation/supprimerreservation/@reservation.Id">Annuler</a></td>
                </tr>
            }
        </table>
        <button class="btnRouge" onclick="window.location.href='/Reservation/CreerReservation'">Réserver</button>
    </div>
</body>
</html>