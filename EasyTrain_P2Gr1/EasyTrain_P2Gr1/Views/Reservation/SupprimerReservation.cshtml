@model EasyTrain_P2Gr1.Models.Reservation
@{
    Layout = "_LayoutGestionnaire";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SupprimerReservation</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        <fieldset>
            <legend>Supprimer une Réservation : </legend>
            @Html.LabelFor(m => Model.Client.Prenom)
            @Html.DisplayFor(m => Model.Client.Prenom)
            <br />
            @Html.LabelFor(m => Model.Client.Nom)
            @Html.DisplayFor(m => Model.Client.Nom)
            <br />
            @Html.LabelFor(m => Model.CoursProgramme.Cours.Titre)
            @Html.DisplayFor(m => Model.CoursProgramme.Cours.Titre)
            <br />
            @Html.LabelFor(m => Model.CoursProgramme.DateDebut)
            @Html.DisplayFor(m => Model.CoursProgramme.DateDebut)
            <br />
            <input type="submit" value="Supprimer" />
        </fieldset>
    }
</body>
</html>



