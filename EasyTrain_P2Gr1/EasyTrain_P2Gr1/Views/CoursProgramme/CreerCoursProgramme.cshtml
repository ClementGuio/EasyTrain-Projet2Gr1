@model EasyTrain_P2Gr1.ViewModels.FormulaireCoursProgrammeViewModel
@{
    Layout = "_LayoutCoach";
}


@using (Html.BeginForm())
{
        <div class="container">
        <caption class="caption1"> Créer un cours Programmé </caption>
        <br>
        <table>

            <tr>
                <td>@Html.LabelFor(c => c.DateDebut)</td>
                <td>@Html.TextBoxFor(c => c.DateDebut, new {@type ="datetime-local"})</td>
            </tr>
            <tr>
                <td>@Html.Label("Titre")</td>
                <td> @Html.DropDownListFor(m => m.CoursId, new SelectList(Model.Cours, "Id", "Titre"))</td>
            </tr>
         
        </table>
        <br />
        <br />
        <input type="submit" value="Valider">
    </div>
}