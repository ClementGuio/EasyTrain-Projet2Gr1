@model List<EasyTrain_P2Gr1.Models.CoursProgramme>
@{
    Layout = "_LayoutClient";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>Calendrier des cours</title>
    <link rel="stylesheet" href="~/css/stylesAccueil.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
</head>
<body>
    <div>
        <!-- Debut Carousel-->
        <div id="carouselAccueil" class="carousel slide" data-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselAccueil" data-bs-slide-to="0" class="active"></button>
                <button type="button" data-bs-target="#carouselAccueil" data-bs-slide-to="1"></button>  <!-- A repeter le nombre de jour a affiche-->
            </div>
            <div class="carousel-inner">

                <div class="carousel-item active">
                    <div class="carteCarousel" style="background-color:black">
                        @foreach (EasyTrain_P2Gr1.Models.CoursProgramme coursProgramme in Model)
                        {
                            @while (coursProgramme.DateDebut < new DateTime(coursProgramme.DateDebut.Year, coursProgramme.DateDebut.Month,
                                                                            coursProgramme.DateDebut.Day + 1));
                            {
                                @using (Html.BeginForm())
                                {
                                    @Html.LabelFor(c => coursProgramme.Cours.Titre)
                                    @Html.DisplayFor(c => coursProgramme.Cours.Titre)
                                    <br />
                                    @Html.LabelFor(c => coursProgramme.DateDebut)
                                    @Html.DisplayFor(c => coursProgramme.DateDebut)
                                    <br />
                                    @Html.LabelFor(c => coursProgramme.DateFin)
                                    @Html.DisplayFor(c => coursProgramme.DateFin)
                                    <br />
                                    @Html.LabelFor(c => coursProgramme.PlacesLibres)
                                    @Html.DisplayFor(c => coursProgramme.PlacesLibres)
                                    <br />
                                    @Html.LabelFor(c => coursProgramme.Cours.Prix)
                                    @Html.DisplayFor(c => coursProgramme.Cours.Prix)
                                    <br />
                                    @Html.LabelFor(c => coursProgramme.Cours.Salle)
                                    @Html.DisplayFor(c => coursProgramme.Cours.Salle)
                                    <br />
                                    @Html.LabelFor(c => coursProgramme.Cours.Coach.Nom)
                                    @Html.DisplayFor(c => coursProgramme.Cours.Coach.Nom)
                                    <br />
                                    @Html.LabelFor(c => coursProgramme.Cours.Coach.Prenom)
                                    @Html.DisplayFor(c => coursProgramme.Cours.Coach.Prenom)
                                    <br />
                                    <input type="submit" value="S'inscrire" />
                                }

                            }

                        }
                    </div>
                </div>

                @for (int i = 1; i <= 30; i++)
                {
                    <div class="carousel-item">
                        <div class="carteCarousel">
                            @foreach (EasyTrain_P2Gr1.Models.CoursProgramme coursProgramme in Model)
                            {
                                @while (coursProgramme.DateDebut < new DateTime(coursProgramme.DateDebut.Year, coursProgramme.DateDebut.Month,
                                                                                coursProgramme.DateDebut.AddDays(1).Day));
                                {
                                     @using (Html.BeginForm())
                                    {
                                        @Html.LabelFor(c => coursProgramme.Cours.Titre)
                                        @Html.DisplayFor(c => coursProgramme.Cours.Titre)
                                        <br />
                                            @Html.LabelFor(c => coursProgramme.DateDebut)
                                        @Html.DisplayFor(c => coursProgramme.DateDebut)
                                            <br />
                                        @Html.LabelFor(c => coursProgramme.DateFin)
                                        @Html.DisplayFor(c => coursProgramme.DateFin)
                                            <br />
                                        @Html.LabelFor(c => coursProgramme.PlacesLibres)
                                        @Html.DisplayFor(c => coursProgramme.PlacesLibres)
                                            <br />
                                        @Html.LabelFor(c => coursProgramme.Cours.Prix)
                                        @Html.DisplayFor(c => coursProgramme.Cours.Prix)
                                            <br />
                                        @Html.LabelFor(c => coursProgramme.Cours.Salle)
                                        @Html.DisplayFor(c => coursProgramme.Cours.Salle)
                                        <br />
                                        @Html.LabelFor(c => coursProgramme.Cours.Coach.Nom)
                                        @Html.DisplayFor(c => coursProgramme.Cours.Coach.Nom)
                                        <br />
                                        @Html.LabelFor(c => coursProgramme.Cours.Coach.Prenom)
                                        @Html.DisplayFor(c => coursProgramme.Cours.Coach.Prenom)
                                        <br />
                                            <input type="submit" value="S'inscrire" />
                                     }
                                    
                                }

                            }
                        </div>
                    </div>
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselAccueil" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" role="button" data-bs-target="#carouselAccueil" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
        <!-- Fin du carroussel -->
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

</body>
</html>