@{
    ViewData["Title"] = "Salle de Sport";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/stylesLayout.css" />
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,700;0,900;1,300;1,500;1,700&family=Taviraj:wght@100&display=swap" rel="stylesheet">

    <title>@ViewData["Title"]</title>
</head>
<body class="bodyLayout">
    <header class="headerUtilisateur">
        <div class="logo">
            <a href="/"><img src="/images/Logo_easy_trainSF.png" alt="Logo EASY TRAIN"></a>
        </div>
        <div class="dropdown">
            <button class="dropbtn"><img src="/images/deconnexion.svg" alt="log-out"></button>
            <div class="dropdown-content">
                <a href="/gestionnaire">Mon profil</a>
                <a href="/login/deconnexion">Se déconnecter</a>
            </div>
        </div>
    </header>
    <!--Modifier les boutons dans la sidebar-->
    <nav class="sidebar">
        <div class="sidebarLink">
            <a href="/gestionnaire/ListeGestionnaire">Gérer les gestionnaires</a>
        </div>
        <div class="sidebarLink">
            <a href="/coach/ListeCoach">Gérer les coachs</a>
        </div>
        <div class="sidebarLink">
            <a href="/cours">Gérer les cours</a>
        </div>
        <div class="sidebarLink">
            <a href="/Salle/listeSalle">Gérer les Salles</a>
        </div>
    </nav>
    <!--Render section jusque la-->
    <main class="mainCompte">
        <!--inserer ici le main-->
        @RenderBody()
    </main>
    <footer>
        <div>
            div1
        </div>
        <div>
            div2
        </div>
        <div>
            div3
        </div>
    </footer>
</body>
</html>



