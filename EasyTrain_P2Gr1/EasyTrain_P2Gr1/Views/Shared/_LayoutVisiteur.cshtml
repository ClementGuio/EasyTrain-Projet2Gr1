@{
    ViewData["Title"] = "EasyTrain - Bienvenue";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/stylesLayout.css" />
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/stylesCartesCoachs.css">
    <link rel="stylesheet" href="~/css/stylesFormulaire.css">
    <link rel="stylesheet" href="~/css/stylesAccueil.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,700;0,900;1,300;1,500;1,700&family=Taviraj:wght@100&display=swap" rel="stylesheet">

    <title>@ViewData["Title"]</title>
</head>
<body class="bodyLayout">
    <header id="menuSlide" class="headerVisiteur">
        <div class="logo">
            <a href="/"><img src="/images/Logo_easy_trainSF.png" alt="Logo EasyTrain"></a>
        </div>
        <button class="button" onclick="window.location.href='/equipement/listeequipement'">Nos Equipements</button>
        <button class="button" onclick="window.location.href='/home/cartescoachs'">Nos Coachs</button>
        <button class="button" onclick="window.location.href='/home/presentation'">Presentation</button>
        <button class="button" onclick="window.location.href='/home/tarifs'">Nos Tarifs</button>
        <button class="buttonSinscrire" onclick="window.location.href='/abonnement/creerabonnement'">S'inscrire</button>
        <div>

            <div class="dropdown">
                <button class="dropbtn"><img src="/images/user.svg" alt="user"></button>
                <div class="dropdown-content">
                    @if (ViewData["role"] != null)
                    {
                        <a href="/@ViewData["role"]">Mon profil</a>
                        <a href="/login/deconnexion">Se déconnecter</a>
                    }
                    else
                    {
                        <a href="/login/connexion">Se connecter</a>
                        <a href="/client/creerclient">S'inscrire</a>
                    }

                </div>
            </div>
            <!-- <a class="login" href="#"></a><img src="/images/user.svg" alt="user"> -->
        </div>
    </header>
    <main class="mainVisiteur">
        <!--inserer ici le main-->
        @RenderBody()
    </main>
    <footer>
        <div>
            <h3>Contact</h3>
            <p>Adresse : 123 Rue de la Salle, Ville</p>
            <p>Téléphone : 03 81 81 81 81</p>
            <p>Email : contact@easytrain.fr</p>
        </div>
        <div>
            <h3>Horaires</h3>
            <p>Lundi - Vendredi : 8h00 - 22h00</p>
            <p>Samedi : 5h00 - 23h00</p>
            <p>Dimanche : 5h00 - 00h00</p>
        </div>
        <div>
            <h3>Suivez-nous</h3>
            <ul class="social-media">
                <li><a href="#"><i class="fab fa-facebook" style="color:white"></i></a></li>
                <li><a href="#"><i class="fab fa-twitter" style="color:white"></i></a></li>
                <li><a href="#"><i class="fab fa-instagram" style="color:white"></i></a></li>
            </ul>
        </div>
    </footer>

    <script src="~/js/menu.js"></script>
</body>
</html>
