@model EasyTrain_P2Gr1.Models.Salle
@{
    Layout = "_LayoutGestionnaire";
}

<link rel="stylesheet" href="~/css/Jeanleo.css">
@using (Html.BeginForm())
{
    <div class="fieldsetModifier">
        <fieldset>
            <legend><h2>Modifier les équipement de la salle @Model.Nom</h2></legend>
            <div class="tableModifier">
                <table>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                    </tr>
                        @foreach (EasyTrain_P2Gr1.Models.Equipement equipement in Model.Equipements)
                    {
                        <tr>
                            <td>@equipement.Id</td>
                            <td>@equipement.Nom</td>
                            <td>
                                <button class="btnSuppression" onclick="window.location.href='/SupprimerEquipement/SupprimerSalle/@equipement.Id'">Supprimer</button>
                            </td>
                        </tr>
                    }
                    <tr>
                        <td><button onclick="window.location.href='/Salle/CreerSalle'" class="btnStandardbleu">Ajouter</button></td>
                    </tr>
                </table>
            </div>
            <input type="button" value="Retour" onclick=" history.back();" class="btnStandard" />
        </fieldset>
    </div>

}

