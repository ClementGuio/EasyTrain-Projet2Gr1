@model List< EasyTrain_P2Gr1.Models.Salle>
@{
    Layout = "_LayoutGestionnaire";
}

<link rel="stylesheet" href="~/css/Jeanleo.css">
<div class="fieldsetModifier">
    <fieldset class="tableForm">
        <legend><h2>Les gestionnaires</h2></legend>
        <div class="tableModifier">
            <table>
                <tr>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Type</th>
                </tr>
                    @foreach (EasyTrain_P2Gr1.Models.Salle salle in Model)
                    {
                    <tr>
                        <td>@salle.Id</td>
                        <td>@salle.Nom</td>
                        <td>@salle.Type</td>
                        <td>
                            <button class="btnStandard  " onclick="window.location.href='/Salle/ListeSalleEquipement/@salle.Id'">Modifier</button>
                            <button class="btnSuppression" onclick="window.location.href='/Salle/SupprimerSalle/@salle.Id'">Supprimer</button>
                        </td>
                    </tr>
                    }
                <tr>
                    <td><button onclick="window.location.href='/Salle/CreerSalle'" class="btnStandardbleu">Ajouter</button></td>
                </tr>
            </table>
        </div>
    </fieldset>
</div>
