@model EasyTrain_P2Gr1.Models.Client
@{
    @if (ViewData["role"].Equals("Coach"))
    {
        Layout = "_LayoutCoach";
    }
    else if (ViewData["role"].Equals("Gestionnaire"))
    {
        Layout = "_LayoutGestionnaire";
    }
    else
    {
        Layout = "_LayoutClient";
    }
}
@using (Html.BeginForm())
{
    <div class="fieldsetModifier">
        <fieldset>
            <legend><h2>Confirmer la suppression</h2></legend>
            <div class="tableModifier">
                <table>
                    <tr>
                        <td>@Html.LabelFor(c => c.Nom)</td>
                        <td>@Html.DisplayFor(c => c.Nom)</td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(c => c.Prenom)</td>
                        <td>@Html.DisplayFor(c => c.Prenom)</td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(c => c.DateNaissance)</td>
                        <td>@Html.DisplayFor(c => c.DateNaissance)</td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(c => c.AdresseMail)</td>
                        <td>@Html.DisplayFor(c => c.AdresseMail)</td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(c => c.DateCreationCompte)</td>
                        <td>@Html.DisplayFor(c => c.DateCreationCompte)</td>
                    </tr>
                </table>

            </div>
            <input type="button" value="Retour" onclick=" history.back();" class="btnStandard" />
            <input type="submit" value="Confirmer la supression" class="btnSuppression" />
        </fieldset>
    </div>
}