@model List<EasyTrain_P2Gr1.Models.Client>
@if (ViewData["role"].Equals("Coach"))
{
    Layout = "_LayoutCoach";
}
else if (ViewData["role"].Equals("Gestionnaire"))
{
    Layout = "_LayoutGestionnaire";
}
else
{
    Layout = "_LayoutClient";
}

<link rel="stylesheet" href="~/css/Jeanleo.css">
<div class="fieldsetModifier">
    <fieldset class="tableForm">
        <legend><h2>Les clients</h2></legend>
        <div class="tableModifier">
            <table>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Date de création de compte</th>
                </tr>
                <!--foreach (Client client in List<Client>)-->
                @foreach (EasyTrain_P2Gr1.Models.Client client in Model)
                {
                    <tr>
                        <td>@client.Id</td>
                        <td>@client.Nom</td>
                        <td>@client.Prenom</td>
                        <td>@client.DateCreationCompte.ToString("dd/MM/yyyy")</td>

                        <td>
                            <button class="btnStandard" onclick="window.location.href='/client/GestionnaireModifierClient/@client.Id'">Modifier</button>
                            <button class="btnSuppression" onclick="window.location.href='/client/GestionnaireSupprimerClient/@client.Id'">Supprimer</button>
                        </td>

                    </tr>
                }
            </table>
        </div>
    </fieldset>
</div>
