@model EasyTrain_P2Gr1.Models.Coach
@{
    Layout = "_LayoutCoach";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="/css/ModifierProfilCss.css">
</head>
<body>
    <main>
        @using (Html.BeginForm())
        {
            <div class="fieldsetModifier">
                <fieldset>
                    <legend><h2>Modifier le profil</h2></legend>
                    <div class="tableModifier"><table>
                        <tr>
                                <td>@Html.LabelFor(m => m.Prenom) </td>
                                <td>@Html.TextBoxFor(m => m.Prenom) </td>
                                <td>@Html.ValidationMessageFor(m => m.Prenom) </td>
                        </tr>
                            
                         <tr>
                                <td>@Html.LabelFor(m => m.Nom) </td>
                                <td> @Html.TextBoxFor(m => m.Nom)  </td>
                                <td>@Html.ValidationMessageFor(m => m.Nom) </td>
                         </tr>
                         <tr>
                                <td> @Html.LabelFor(m => m.DateNaissance) </td>
                                <td> @Html.TextBoxFor(m => m.DateNaissance) </td>
                                <td>@Html.ValidationMessageFor(m => m.DateNaissance) </td>
                         </tr>
                         <tr>
                                <td>@Html.LabelFor(m => m.MotDePasse) </td>
                                <td> @Html.TextBoxFor(m => m.MotDePasse) </td>
                            <tr> @Html.ValidationMessageFor(m => m.MotDePasse) </tr>
                         </tr>
                    </table></div>
                       
                    <input type="submit" value="Modifier" />
                </fieldset>
            </div>
        }
    </main>
</body>
</html>