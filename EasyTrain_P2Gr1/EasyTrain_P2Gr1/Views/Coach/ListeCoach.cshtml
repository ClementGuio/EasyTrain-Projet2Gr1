@model List<EasyTrain_P2Gr1.Models.Coach>
@{
    Layout = "_LayoutCoach";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>Liste des coachs</title>
</head>
<body>
    <table class="mytable">
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Date de naissance</th>
            <th>Adresse mail</th>
            <th>Mot de passe</th>
            <th>Date d'embauche</th>

        </tr>
        @foreach (EasyTrain_P2Gr1.Models.Coach coach in Model)
        {
            <tr>
                <td>@coach.Id</td>
                <td>@coach.Nom</td>
                <td>@coach.Prenom</td>
                <td>@coach.DateNaissance</td>
                <td>@coach.AdresseMail</td>
                <td>@coach.MotDePasse</td>
                <td>@coach.DateCreationCompte.ToString("dd/MM/yyyy")</td>
            </tr>
        }
    </table>
    <button class="btnRouge" onclick="window.location.href='/coach/ModifierCoach'">Modifier</button>
    <button class="btnRouge" onclick="window.location.href='/coach/SupprimerCoach'">Supprimer</button>


</body>
</html>