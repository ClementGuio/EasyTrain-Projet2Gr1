@model EasyTrain_P2Gr1.Models.Cours
@{
    Layout = "_LayoutGestionnaire";
}
@using (Html.BeginForm())
{
    <br />
    @Html.LabelFor(m => m.Coach.Prenom)
    @Html.DisplayFor(m => m.Coach.Nom)
    <br />
    @Html.LabelFor(m => m.Coach.Nom)
    @Html.DisplayFor(m => m.Coach.Nom)
    <br />
    @Html.LabelFor(m => m.Titre)
    @Html.DisplayFor(m => m.Titre)
    <br />
    @Html.LabelFor(m => m.NbParticipants)
    @Html.DisplayFor(m => m.NbParticipants)
    <br />
    <input type="submit" value="Supprimer">
}
<html>
    <head>
        <link rel="stylesheet" href="/css/CreerCours.css">
    </head>
    <body>
    <main>
        @using (Html.BeginForm("SupprimerCours", "FormulaireCoursViewModel", FormMethod.Post))
        {
            <div class="fieldsetModifier">
                <fieldset>
                    <legend>Créer un cours</legend>
                    <br>
                    <br>
                    <br>
                    <br>

                    <div class="TableCreerCours">
                        <table>
                            <tr>
                                <td> @Html.LabelFor(m => Model.Titre)</td>
                                <td> @Html.TextBoxFor(m => Model.Titre)</td>
                                <td>@Html.ValidationMessageFor(m => Model.Titre)</td>
                            </tr>

                            <tr>
                                <td>@Html.LabelFor(m => Model.NbParticipants)</td>
                                <td> @Html.TextBoxFor(m => Model.NbParticipants)</td>
                                <td>@Html.ValidationMessageFor(m => Model.NbParticipants)</td>
                            </tr>

                            <tr>
                                <td>@Html.LabelFor(m => Model.Prix)</td>
                                <td>@Html.TextBoxFor(m => Model.Prix)</td>
                                <td> @Html.ValidationMessageFor(m => Model.Prix)</td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(m => m.Salles)</td>
                                <td>@Html.DropDownListFor(m => m.SalleId, new SelectList(Model.Salles, "Id", "Nom" ))</td>
                                <td>@Html.ValidationMessageFor(m => Model.SalleId)</td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(m => m.Coachs)</td>
                                <td>@Html.DropDownListFor(m => m.CoachId, new SelectList(Model.Coachs, "Id", "Nom" ))</td>
                                <td> @Html.ValidationMessageFor(m => Model.CoachId)</td>
                            </tr>


                        </table>
                    </div>
                    <br>
                    <br>
                    <button class="btnCreerCours" onclick="window.location.href='/Cours/ListeCours'">Confirmer la suppression</button>


                </fieldset>
            </div>
        }
    </main>
</body>
</html>