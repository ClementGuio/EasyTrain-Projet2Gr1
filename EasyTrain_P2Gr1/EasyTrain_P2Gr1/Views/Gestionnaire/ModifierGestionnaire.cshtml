@model EasyTrain_P2Gr1.Models.Gestionnaire;
@{  
    Layout = "_LayoutCompte";
}
<main>
    @using (Html.BeginForm())
    {
        //-----------Formulaire Gestionnaire
        <fieldset>
            <legend>Modifier un gestionnaire : </legend>
            @Html.LabelFor(m => Model.Prenom)
            @Html.TextBoxFor(m => Model.Prenom)
            @Html.ValidationMessageFor(m => Model.Prenom)
            <br />
            @Html.LabelFor(m => Model.Nom)
            @Html.TextBoxFor(m => Model.Nom)
            @Html.ValidationMessageFor(m => Model.Nom)
            <br />
            @Html.LabelFor(m => Model.AdresseMail)
            @Html.TextBoxFor(m => Model.AdresseMail)
            @Html.ValidationMessageFor(m => Model.AdresseMail)
            <br />
            @Html.LabelFor(m => Model.DateNaissance)
            @Html.TextBoxFor(m => Model.DateNaissance)
            @Html.ValidationMessageFor(m => Model.DateNaissance)
            <br />
            @Html.LabelFor(m => Model.MotDePasse)
            @Html.TextBoxFor(m => Model.MotDePasse)
            @Html.ValidationMessageFor(m => Model.MotDePasse)
            <br />
            @Html.LabelFor(m => Model.DateEmbauche)
            @Html.TextBoxFor(m => Model.DateEmbauche)
            @Html.ValidationMessageFor(m => Model.DateEmbauche)
            <br />
            <input type="submit" value="Modifier" />
        </fieldset>
    }
</main>
